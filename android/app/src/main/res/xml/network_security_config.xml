<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext HTTP traffic for ESP32 local development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.4.1</domain>
        <domain includeSubdomains="false">192.168.4.2</domain>
        <domain includeSubdomains="false">192.168.4.3</domain>
        <domain includeSubdomains="false">192.168.1.1</domain>
        <domain includeSubdomains="false">10.0.0.1</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
    
    <!-- For ESP32 local networks -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>